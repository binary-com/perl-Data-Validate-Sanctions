#!/usr/bin/perl

use strict;
use warnings;
use Getopt::Long;
use Data::Validate::Sanctions;

my $token;

GetOptions ("token=s" => \$token,
            )
  or die("EU sanactions token was missing from the command args.\n Please call like: perl bin/update_sanctions_csv -token <YOUR TOKEN>\n");

my $sanction_file = shift // Data::Validate::Sanctions::get_sanction_file();
my %args = (
    sanction_file => $sanction_file,
    eu_sanctions_token => $token,
);
Data::Validate::Sanctions->new(%args)->update_data;
